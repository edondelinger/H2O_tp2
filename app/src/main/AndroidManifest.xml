<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.H2O_tp2"
        tools:targetApi="31">
        <activity
            android:name="com.example.h2o_tp2.controleur.MainActivity"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.h2o_tp2.controleur.CritereActivity"
            android:label="@string/title_activity_critere" >
        </activity>
        <activity
            android:name="com.example.h2o_tp2.controleur.SynchroActivity"
            android:label="@string/title_activity_synchro" >
        </activity>
        <activity
            android:name="com.example.h2o_tp2.controleur.SaisieReleveActivity"
            android:label="@string/title_activity_saisie_releve" >
        </activity>
    </application>

</manifest>